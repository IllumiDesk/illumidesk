# images used for roles
DOCKER_LEARNER_IMAGE={{docker_illumidesk_notebook_learner_image}}
DOCKER_GRADER_IMAGE={{docker_illumidesk_notebook_grader_image}}
DOCKER_INSTRUCTOR_IMAGE={{docker_illumidesk_notebook_instructor_image}}
DOCKER_STANDARD_IMAGE={{docker_illumidesk_notebook_base_image}}

# docker network
DOCKER_NETWORK_NAME=jupyter-network

# user home directory within container
DOCKER_NOTEBOOK_DIR=/home/jovyan

# nbgrader exchange directory
EXCHANGE_DIR=/srv/nbgrader/exchange

# jupyterhub cryptographic key (mostly for cookies)
JUPYTERHUB_CRYPT_KEY={{jhub_crypt_key}}

# jupyterhub api token (mostly used by services)
JUPYTERHUB_API_TOKEN={{jhub_api_token}}

# external facing api url
JUPYTERHUB_API_URL=http://reverse-proxy:8000{{base_url}}/hub/api

# base url for the jupyterhub application
JUPYTERHUB_BASE_URL={{base_url}}

# admin users
JUPYTERHUB_ADMIN_USER={{admin_user}}

# organization name used with nfs
ORGANIZATION_NAME={{org_name}}

# postgres
POSTGRES_DB=illumidesk
POSTGRES_USER=illumidesk
POSTGRES_PASSWORD=illumidesk
POSTGRES_HOST=jupyterhub-db
PGDATA=/var/lib/postgresql/data

MNT_HOME_DIR_UID=1000
MNT_HOME_DIR_GID=100
MNT_ROOT={{mnt_root}}

# lti 1.1
LTI_CONSUMER_KEY={{lti11_consumer_key}}
LTI_SHARED_SECRET={{lti11_shared_secret}}

# lti 1.3
LTI13_AUTHORIZE_URL={{lti13_authorize_url}}
LTI13_CLIENT_ID={{lti13_client_id}}
LTI13_ENDPOINT={{lti13_endpoint}}
LTI13_PRIVATE_KEY={{lti13_private_key}}
LTI13_TOKEN_URL={{lti13_token_url}}

# setup course service name
DOCKER_SETUP_COURSE_SERVICE_NAME=setup-course
DOCKER_SETUP_COURSE_PORT=8000

# jupyterhub service name
JUPYTERHUB_SERVICE_NAME=jupyterhub

# traefik-proxy
PROXY_API_URL=http://reverse-proxy:8099

# anouncement service (internal)
ANNOUNCEMENT_SERVICE_PORT=8889
